{
    "family": "pipeline", 
    "networkMode": "awsvpc", 
    "containerDefinitions": [
        {
            "name": "worker", 
            "image": "managedkube/kops:dev", 
            "essential": true, 
            "entryPoint": [
                "./containers/kubernetes/clusters/kops/ci-pipeline.sh"
            ], 
            "command": [
                "-i",
                "master",
                "-u",
                "master"
            ],
            "environment" : [
                { "name" : "KOPS_STATE_STORE", "value": "s3://xxxx"},
                { "name" : "ENVIRONMENT_NAME", "value" : "dev-test" },
                { "name" : "E2E_TESTS_QUICK_MODE", "value": "false"}
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "ci-pipeline",
                    "awslogs-region": "us-east-1",
                    "awslogs-stream-prefix": "worker"
                }
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ], 
    "cpu": "256", 
    "memory": "512",
    "executionRoleArn": "arn:aws:iam:::role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam:::role/kubernetesOpsKopsFargateTask"
}
